@model IEnumerable<OnChat.Models.Rates>

@{
    ViewData["Title"] = "Search";
}
<h1 class="headline">Search rate</h1>

<form asp-action="Search">
    <input class="search" name="query"/>
    <input class="search" type="submit" value="Search"/>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Feedback)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Feedback)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                 <a class="edit" asp-action="Edit" asp-route-name="@item.Name">Edit</a> |
                <a class="details" asp-action="Details" asp-route-name="@item.Name">Details</a> |
                <a class="delete" asp-action="Delete" asp-route-name="@item.Name">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a  class="back" asp-action="Index">Back to List</a>
</div>

<style type="text/css">
    
    h1.headline{
        margin-bottom:5%;
        color:white;
        font-size: 550%;
        font-weight: 700;
        font-family: "Montserrat", sans-serif;
        text-decoration: underline;
    }

    table.table{
        margin-bottom:4%;
        border:solid 5px cadetblue;
        color:black;
        font-size: 150%;
        background-color:white;
        font-family: "Montserrat", sans-serif;
        margin-top:4%;
        text-align: center;
    }

    input.search{
       font-size: 150%;
       font-family: "Montserrat", sans-serif;
       font-weight: 200;
    }
    
    a.back{
        font-size: 150%;
        font-weight: 300;
        font-family: "Montserrat", sans-serif;
        color:white;
    }

    a.edit{
         font-family: "Montserrat", sans-serif;
         font-size: 100%;
         color:cadetblue;
    }
     a.details{
         font-family: "Montserrat", sans-serif;
         font-size: 100%;
         color:cadetblue;
    }
     a.delete{
         font-family: "Montserrat", sans-serif;
         font-size: 100%;
         color:cadetblue;
    }

</style>